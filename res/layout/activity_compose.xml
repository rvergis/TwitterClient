<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ComposeActivity" >

    <EditText
        android:id="@+id/etComposeView"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@color/grey_light"
        android:textColor="@color/grey_dark"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:ems="48"
        android:gravity="top|left"
        android:hint="@string/composeTweetHint" />

    <TextView
        android:id="@+id/tvMaxChars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etComposeView"
        android:layout_below="@+id/etComposeView"
        android:layout_marginTop="24dp"
        android:ems="48"
        android:text="@string/maxCharsInitial" />
    
    <Button
        android:id="@+id/bSave"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal = "true"
        android:layout_below="@+id/tvMaxChars"
        android:layout_marginTop="24dp"
        android:onClick="onClickPressed"
	    android:text="@string/save" />

</RelativeLayout>
